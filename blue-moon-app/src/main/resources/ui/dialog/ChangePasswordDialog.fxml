<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.bluemoon.ui.dialog.ChangePasswordDialog" stylesheets="/css/styles.css">
   <content>
      <VBox spacing="15.0" prefWidth="400.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label fx:id="messageLabel" text="Vui lòng đổi mật khẩu của bạn" wrapText="true" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" visible="true" />
            
            <Label text="Mật khẩu mới:" />
            <PasswordField fx:id="newPasswordField" promptText="Nhập mật khẩu mới" />
            
            <Label text="Xác nhận mật khẩu:" />
            <PasswordField fx:id="confirmPasswordField" promptText="Nhập lại mật khẩu mới" />
            
            <Label text="Lưu ý: Mật khẩu phải có ít nhất 6 ký tự" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
         </children>
      </VBox>
   </content>
   <buttonTypes>
      <ButtonType fx:id="okButton" text="Đổi mật khẩu" buttonData="OK_DONE" />
      <ButtonType fx:id="cancelButton" text="Hủy" buttonData="CANCEL_CLOSE" />
   </buttonTypes>
</DialogPane>

