<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.bluemoon.ui.function.FunctionDialogController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Thông tin chức năng" style="-fx-font-size: 18px; -fx-font-weight: bold;">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </Label>
            
            <Label text="Tên chức năng *" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </TextField>
            
            <Label text="Nhóm chức năng *" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="functionGroupComboBox" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </ComboBox>
            
            <Label text="Lớp biên *" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="boundaryClassField" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </TextField>
            
            <Label text="Mô tả" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <TextArea fx:id="descriptionField" prefRowCount="3" style="-fx-font-size: 14px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </TextArea>
            
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
               <Button fx:id="saveButton" text="Lưu" onAction="#handleSave" style="-fx-font-size: 14px; -fx-pref-width: 100px;">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel" style="-fx-font-size: 14px; -fx-pref-width: 100px;">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
            </HBox>
            
            <Label fx:id="errorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>

