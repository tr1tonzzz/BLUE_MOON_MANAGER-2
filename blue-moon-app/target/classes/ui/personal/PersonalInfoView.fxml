<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.bluemoon.ui.personal.PersonalInfoController" stylesheets="/css/styles.css">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" style="-fx-background-color: #f8f9fa;">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <Label fx:id="titleLabel" text="Đăng ký thông tin cá nhân" styleClass="label-title" style="-fx-font-size: 28px; -fx-text-fill: #2c3e50;">
               <font>
                  <Font name="Arial" size="28.0" />
               </font>
            </Label>
            
            <Label fx:id="messageLabel" styleClass="label-success" visible="false" alignment="CENTER" />
            
            <ScrollPane fitToWidth="true" maxHeight="550.0" styleClass="scroll-pane">
               <content>
                  <VBox spacing="15.0" styleClass="form-section">
                     
                     <Label text="Thông tin cá nhân" styleClass="form-section-title">
                        <font>
                           <Font name="Arial" size="18.0" />
                        </font>
                     </Label>
                     
                     <TextField fx:id="fullNameField" promptText="Họ và tên *" />
                     
                     <TextField fx:id="idCardField" promptText="CMND/CCCD *" />
                     
                     <HBox spacing="10.0">
                        <DatePicker fx:id="dateOfBirthPicker" promptText="Ngày sinh" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="genderComboBox" promptText="Giới tính" HBox.hgrow="ALWAYS" />
                     </HBox>
                     
                     <TextField fx:id="phoneField" promptText="Số điện thoại" />
                     
                     <TextField fx:id="emailField" promptText="Email" />
                     
                     <TextField fx:id="occupationField" promptText="Nghề nghiệp" />
                     
                     <TextArea fx:id="permanentAddressArea" promptText="Địa chỉ thường trú" prefRowCount="2" />
                     
                     <TextArea fx:id="temporaryAddressArea" promptText="Địa chỉ tạm trú" prefRowCount="2" />
                     
                     <ComboBox fx:id="statusComboBox" promptText="Trạng thái cư trú" />
                     
                     <Separator styleClass="separator" />
                     
                     <Label text="Thông tin hộ dân (tùy chọn)" styleClass="form-section-title">
                        <font>
                           <Font name="Arial" size="18.0" />
                        </font>
                     </Label>
                     
                     <HBox spacing="10.0">
                        <TextField fx:id="apartmentCodeField" promptText="Mã căn hộ" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="householdCodeField" promptText="Mã hộ dân" HBox.hgrow="ALWAYS" />
                     </HBox>
                     
                     <ComboBox fx:id="relationshipComboBox" promptText="Quan hệ trong hộ" />
                     
                  </VBox>
               </content>
            </ScrollPane>
            
            <HBox alignment="CENTER" spacing="15.0">
               <Button fx:id="saveButton" onAction="#handleSave" text="Đăng ký" styleClass="button-primary" style="-fx-pref-width: 150px; -fx-pref-height: 40px;" />
               <Button fx:id="cancelButton" onAction="#handleCancel" text="Hủy" styleClass="button-secondary" style="-fx-pref-width: 150px; -fx-pref-height: 40px;" />
            </HBox>
            
         </children>
      </VBox>
   </children>
</AnchorPane>

